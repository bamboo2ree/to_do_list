<h1 class="indext_h1 mt-3">TO DO Lists</h1>
<p class="new_button">
    <%= link_to "New", new_list_path, class: "btn btn-light" %>
</p>

<table class="table table-hover mt-3">

    <thead>
        <tr>
            <th>Title</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>

    <% @lists.each do |list| %>
    
        <tbody>
            <tr>
                <td><%= list.title%></td>
                <td><%= list.note %></td>
                <td>
                    <%= link_to "Preview", list_path(list), class: "btn btn-secondary" %>
                    <%= link_to "Edit", edit_list_path(list), class: "btn btn-info ml-2" %>
                    <%= link_to "Delete",  list_path(list), method: :delete,  data: { confirm: "Are you sure you want to delete this?" } , class: "btn btn-danger ml-2" %>
                </td>
            </tr>
        </tbody>

    <% end %>

</table>

