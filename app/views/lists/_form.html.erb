<%= form_for @list do |f| %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :note %>
        <%= f.text_area :note, class: "form-control" %>
    </div>

    <div class="action">
        <%= f.submit class: "btn btn-primary btn-block" %>
    </div>

<% end %>